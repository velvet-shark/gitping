# GitPing Environment Configuration
# Copy this file to .env and fill in your actual values

# Cloudflare D1 Database ID (get from: wrangler d1 list)
D1_DATABASE_ID=your_d1_database_id

# Cloudflare KV Namespace ID (get from: wrangler kv namespace list)
KV_NAMESPACE_ID=your_kv_namespace_id

# Production/Staging (optional - will fallback to dev values)
D1_DATABASE_ID_PROD=your_prod_d1_database_id
KV_NAMESPACE_ID_PROD=your_prod_kv_namespace_id
D1_DATABASE_ID_STAGING=your_staging_d1_database_id
KV_NAMESPACE_ID_STAGING=your_staging_kv_namespace_id

# GitHub OAuth Application (create at: https://github.com/settings/applications/new)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# JWT Secret (generate a random 32+ character string)
JWT_SECRET=your_jwt_secret_key_min_32_chars

# Frontend URL (for OAuth redirects)
FRONTEND_URL=your_domain